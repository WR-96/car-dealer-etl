%h1 Listing Providers

= link_to 'Extract', parts_providers_extract_path, class: 'btn btn-primary my-3'
= link_to 'Errors', parts_providers_errors_path, class: 'btn btn-primary my-3'
= link_to 'Clean', parts_providers_path, class: 'btn btn-primary my-3'

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th ID
        %th Tradename
        %th Phone
        %th Cellphone
        %th Email
        %th Car maker
        %th Piece
        %th Price
        %th
        %th

    %tbody
      - @parts_providers.each do |parts_provider|
        %tr
          %td= parts_provider.id
          - td_for(parts_provider, :tradename)
          - td_for(parts_provider, :phone)
          - td_for(parts_provider, :cellphone)
          - td_for(parts_provider, :email)
          - td_for(parts_provider, :car_maker)
          - td_for(parts_provider, :piece)
          - td_for(parts_provider, :price)
          %td= link_to 'Edit', edit_parts_provider_path(parts_provider)
          %td= link_to 'Destroy', parts_provider, method: :delete, data: { confirm: 'Are you sure?' }

%br
