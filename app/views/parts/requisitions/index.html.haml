%h1 Listing Requisitions

= link_to 'Extract', parts_requisitions_extract_path, class: 'btn btn-primary my-3'
= link_to 'Load', parts_requisitions_load_path, class: 'btn btn-primary my-3'
= link_to 'Errors', parts_requisitions_errors_path, class: 'btn btn-primary my-3'
= link_to 'Clean', parts_requisitions_path, class: 'btn btn-primary my-3'

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th ID
        %th Employee name
        %th Date
        %th Status
        %th Delivery date
        %th Article
        %th Amount
        %th
        %th

    %tbody
      - @parts_requisitions.each do |parts_requisition|
        %tr
          %td= parts_requisition.id
          - td_for(parts_requisition, :employee_name)
          - td_for(parts_requisition, :date)
          - td_for(parts_requisition, :status)
          - td_for(parts_requisition, :delivery_date)
          - td_for(parts_requisition, :article)
          - td_for(parts_requisition, :amount)
          %td= link_to 'Edit', edit_parts_requisition_path(parts_requisition)
          %td= link_to 'Destroy', parts_requisition, method: :delete, data: { confirm: 'Are you sure?' }

%br
