= form_for @parts_requisition do |f|
  - if @parts_requisition.errors.any?
    #error_explanation.alert.alert-danger.alert-dismissible.fade.show.p-3.m-3
      %h2= "#{pluralize(@parts_requisition.errors.count, "error")} prohibited this parts_requisition from being saved:"
      %button{type: 'button', class: 'close', 'data-dismiss': 'alert', 'arial-label': 'Close'}
        %span{'aria-hidden': 'true'} x
      %ul
        - @parts_requisition.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :employee_name
    = f.text_field :employee_name, class: 'form-control'
  .form-group
    = f.label :date
    = f.text_field :date, class: 'form-control'
  .form-group
    = f.label :status
    = f.text_field :status, class: 'form-control'
  .form-group
    = f.label :delivery_date
    = f.text_field :delivery_date, class: 'form-control'
  .form-group
    = f.label :article
    = f.text_field :article, class: 'form-control'
  .form-group
    = f.label :amount
    = f.text_field :amount, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
