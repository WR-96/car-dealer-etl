    = f.text_field :description, class: 'form-control'
  .form-group
    = f.label :car_model
    = f.text_field :car_model, class: 'form-control'
  .form-group
    = f.label :car_maker
    = f.text_field :car_maker, class: 'form-control'
  .form-group
    = f.label :price
    = f.text_field :price, class: 'form-control'
  .form-group
    = f.label :stock
    = f.text_field :stock, class: 'form-control'
  .form-group
    = f.label :reorder
    = f.text_field :reorder, class: 'form-control'
