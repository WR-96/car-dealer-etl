= form_for @parts_sale do |f|
  - if @parts_sale.errors.any?
    #error_explanation.alert.alert-danger.alert-dismissible.fade.show.p-3.m-3
      %h2= "#{pluralize(@parts_sale.errors.count, "error")} prohibited this parts_sale from being saved:"
      %button{type: 'button', class: 'close', 'data-dismiss': 'alert', 'arial-label': 'Close'}
        %span{'aria-hidden': 'true'} x
      %ul
        - @parts_sale.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :client_name
    = f.text_field :client_name, class: 'form-control'
  .form-group
    = f.label :employee_name
    = f.text_field :employee_name, class: 'form-control'
  .form-group
    = f.label :date
    = f.text_field :date, class: 'form-control'
  .form-group
    = f.label :product
    = f.text_field :product, class: 'form-control'
  .form-group
    = f.label :price
    = f.text_field :price, class: 'form-control'
  .form-group
    = f.label :amount
    = f.text_field :amount, class: 'form-control'
  .form-group
    = f.label :total
    = f.text_field :total, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
