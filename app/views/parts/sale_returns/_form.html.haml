= form_for @parts_sale_return do |f|
  - if @parts_sale_return.errors.any?
    #error_explanation.alert.alert-danger.alert-dismissible.fade.show.p-3.m-3
      %h2= "#{pluralize(@parts_sale_return.errors.count, "error")} prohibited this parts_sale_return from being saved:"
      %button{type: 'button', class: 'close', 'data-dismiss': 'alert', 'arial-label': 'Close'}
        %span{'aria-hidden': 'true'} x
      %ul
        - @parts_sale_return.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :client_name
    = f.text_field :client_name, class: 'form-control'
  .form-group
    = f.label :date
    = f.text_field :date, class: 'form-control'
  .form-group
    = f.label :article
    = f.text_field :article, class: 'form-control'
  .form-group
    = f.label :refound
    = f.text_field :refound, class: 'form-control'
  .form-group
    = f.label :comment
    = f.text_field :comment, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
