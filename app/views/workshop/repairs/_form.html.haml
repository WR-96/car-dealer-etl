= form_for @workshop_repair do |f|
  - if @workshop_repair.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workshop_repair.errors.count, "error")} prohibited this workshop_repair from being saved:"
      %ul
        - @workshop_repair.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :mechanic_name
    = f.text_field :mechanic_name
  .field
    = f.label :car
    = f.text_field :car
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :total
    = f.text_field :total
  .actions
    = f.submit 'Save'
