= form_for @workshop_car do |f|
  - if @workshop_car.errors.any?
    #error_explanation.alert.alert-danger.alert-dismissible.fade.show.p-3.m-3
      %h2= "#{pluralize(@workshop_car.errors.count, "error")} prohibited this workshop_car from being saved:"
      %button{type: 'button', class: 'close', 'data-dismiss': 'alert', 'arial-label': 'Close'}
        %span{'aria-hidden': 'true'} x
      %ul
        - @workshop_car.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :client_name
    = f.text_field :client_name, class: 'form-control'
  .form-group
    = f.label :maker
    = f.text_field :maker, class: 'form-control'
  .form-group
    = f.label :car
    = f.text_field :car, class: 'form-control'
  .form-group
    = f.label :color
    = f.text_field :color, class: 'form-control'
  .form-group
    = f.label :year
    = f.text_field :year, class: 'form-control'
  .form-group
    = f.label :license_plate
    = f.text_field :license_plate, class: 'form-control'
  .form-group
    = f.label :serial_number
    = f.text_field :serial_number, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
