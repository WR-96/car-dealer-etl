= form_for @workshop_client do |f|
  - if @workshop_client.errors.any?
    #error_explanation.alert.alert-danger.alert-dismissible.fade.show.p-3.m-3
      %h2= "#{pluralize(@workshop_client.errors.count, "error")} prohibited this workshop_client from being saved:"
      %button{type: 'button', class: 'close', 'data-dismiss': 'alert', 'arial-label': 'Close'}
        %span{'aria-hidden': 'true'} x
      %ul
        - @workshop_client.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :phone
    = f.text_field :phone, class: 'form-control'
  .form-group
    = f.label :cellphone
    = f.text_field :cellphone, class: 'form-control'
  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :rfc
    = f.text_field :rfc, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
