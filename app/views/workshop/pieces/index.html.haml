%h1 Listing Pieces

= link_to 'Extract', workshop_pieces_extract_path, class: 'btn btn-primary my-3'
= link_to 'Errors', workshop_pieces_errors_path, class: 'btn btn-primary my-3'
= link_to 'Clean', workshop_pieces_path, class: 'btn btn-primary my-3'

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th ID
        %th Car
        %th Maker
        %th Description
        %th Price
        %th
        %th

    %tbody
      - @workshop_pieces.each do |workshop_piece|
        %tr
          %td= workshop_piece.id
          - td_for(workshop_piece, :car)
          - td_for(workshop_piece, :maker)
          - td_for(workshop_piece, :description)
          - td_for(workshop_piece, :price)
          %td= link_to 'Edit', edit_workshop_piece_path(workshop_piece)
          %td= link_to 'Destroy', workshop_piece, method: :delete, data: { confirm: 'Are you sure?' }

%br
