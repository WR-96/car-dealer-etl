%h1 Listing Pieces

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th Car
        %th Maker
        %th Description
        %th Price
        %th
        %th

    %tbody
      - @workshop_pieces.each do |workshop_piece|
        %tr
          %td= workshop_piece.car
          %td= workshop_piece.maker
          %td= workshop_piece.description
          %td= workshop_piece.price
          %td= link_to 'Edit', edit_workshop_piece_path(workshop_piece)
          %td= link_to 'Destroy', workshop_piece, method: :delete, data: { confirm: 'Are you sure?' }

%br
