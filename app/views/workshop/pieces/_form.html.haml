= form_for @workshop_piece do |f|
  - if @workshop_piece.errors.any?
    #error_explanation.alert.alert-danger.alert-dismissible.fade.show.p-3.m-3
      %h2= "#{pluralize(@workshop_piece.errors.count, "error")} prohibited this workshop_piece from being saved:"
      %button{type: 'button', class: 'close', 'data-dismiss': 'alert', 'arial-label': 'Close'}
        %span{'aria-hidden': 'true'} x
      %ul
        - @workshop_piece.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :car
    = f.text_field :car, class: 'form-control'
  .form-group
    = f.label :maker
    = f.text_field :maker, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_field :description, class: 'form-control'
  .form-group
    = f.label :price
    = f.text_field :price, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
