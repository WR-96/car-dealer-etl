= form_for @workshop_booking do |f|
  - if @workshop_booking.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workshop_booking.errors.count, "error")} prohibited this workshop_booking from being saved:"
      %ul
        - @workshop_booking.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :mechanic_name
    = f.text_field :mechanic_name
  .field
    = f.label :client_name
    = f.text_field :client_name
  .field
    = f.label :car
    = f.text_field :car
  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :hour
    = f.text_field :hour
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
