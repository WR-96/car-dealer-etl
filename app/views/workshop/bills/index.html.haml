%h1 Listing Bills

= link_to 'Extract', workshop_bills_extract_path, class: 'btn btn-primary my-3'
= link_to 'Errors', workshop_bills_errors_path, class: 'btn btn-primary my-3'
= link_to 'Clean', workshop_bills_path, class: 'btn btn-primary my-3'

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th ID
        %th Date
        %th Client name
        %th RFC
        %th Service
        %th Sub total
        %th Tax percentage
        %th Tax amount
        %th Total
        %th
        %th

    %tbody
      - @workshop_bills.each do |workshop_bill|
        %tr
          %td= workshop_bill.id
          - td_for(workshop_bill, :date)
          - td_for(workshop_bill, :client_name)
          - td_for(workshop_bill, :rfc)
          - td_for(workshop_bill, :service)
          - td_for(workshop_bill, :sub_total)
          - td_for(workshop_bill, :tax_percentage)
          - td_for(workshop_bill, :tax_amount)
          - td_for(workshop_bill, :total)
          %td= link_to 'Edit', edit_workshop_bill_path(workshop_bill)
          %td= link_to 'Destroy', workshop_bill, method: :delete, data: { confirm: 'Are you sure?' }

%br
