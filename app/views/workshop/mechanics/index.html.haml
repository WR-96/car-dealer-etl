%h1 Listing Mechanics

= link_to 'Extract', workshop_mechanics_extract_path, class: 'btn btn-primary my-3'
= link_to 'Errors', workshop_mechanics_errors_path, class: 'btn btn-primary my-3'
= link_to 'Clean', workshop_mechanics_path, class: 'btn btn-primary my-3'

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th ID
        %th Name
        %th Phone
        %th Cellphone
        %th Email
        %th
        %th

    %tbody
      - @workshop_mechanics.each do |workshop_mechanic|
        %tr
          %td= workshop_mechanic.id
          - td_for(workshop_mechanic, :name)
          - td_for(workshop_mechanic, :phone)
          - td_for(workshop_mechanic, :cellphone)
          - td_for(workshop_mechanic, :email)
          %td= link_to 'Edit', edit_workshop_mechanic_path(workshop_mechanic)
          %td= link_to 'Destroy', workshop_mechanic, method: :delete, data: { confirm: 'Are you sure?' }

%br
