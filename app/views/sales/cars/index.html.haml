%h1 Listing Cars

= link_to 'Extract', sales_cars_extract_path, class: 'btn btn-primary my-3'
= link_to 'Load', sales_cars_load_path, class: 'btn btn-primary my-3'
= link_to 'Errors', sales_cars_errors_path, class: 'btn btn-primary my-3'
= link_to 'Clean', sales_cars_path, class: 'btn btn-primary my-3'

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th ID
        %th Model
        %th Category
        %th Maker
        %th Color
        %th Year
        %th Price
        %th Miles
        %th Serial number
        %th Purchase date
        %th
        %th

    %tbody
      - @sales_cars.each do |sales_car|
        %tr
          %td= sales_car.id
          - td_for(sales_car, :model)
          - td_for(sales_car, :category)
          - td_for(sales_car, :maker)
          - td_for(sales_car, :color)
          - td_for(sales_car, :year)
          - td_for(sales_car, :price)
          - td_for(sales_car, :miles)
          - td_for(sales_car, :serial_number)
          - td_for(sales_car, :purchase_date)
          %td= link_to 'Edit', edit_sales_car_path(sales_car)
          %td= link_to 'Destroy', sales_car, method: :delete, data: { confirm: 'Are you sure?' }

%br
