= form_for @sales_employee do |f|
  - if @sales_employee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sales_employee.errors.count, "error")} prohibited this sales_employee from being saved:"
      %ul
        - @sales_employee.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
