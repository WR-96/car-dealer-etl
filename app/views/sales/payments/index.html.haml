%h1 Listing Payments

= link_to 'Extract', sales_payments_extract_path, class: 'btn btn-primary my-3'
= link_to 'Errors', sales_payments_errors_path, class: 'btn btn-primary my-3'
= link_to 'Clean', sales_payments_path, class: 'btn btn-primary my-3'

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th ID
        %th Client name
        %th Status
        %th Due date
        %th Payment date
        %th Amount
        %th
        %th

    %tbody
      - @sales_payments.each do |sales_payment|
        %tr
          %td= sales_payment.id
          - td_for(sales_payment, :client_name)
          - td_for(sales_payment, :status)
          - td_for(sales_payment, :due_date)
          - td_for(sales_payment, :payment_date)
          - td_for(sales_payment, :amount)
          %td= link_to 'Edit', edit_sales_payment_path(sales_payment)
          %td= link_to 'Destroy', sales_payment, method: :delete, data: { confirm: 'Are you sure?' }

%br
