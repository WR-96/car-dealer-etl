%h1 Listing Payments

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th Client name
        %th Deal number
        %th Status
        %th Due date
        %th Payment date
        %th Amount
        %th
        %th

    %tbody
      - @sales_payments.each do |sales_payment|
        %tr
          %td= sales_payment.client_name
          %td= sales_payment.deal_number
          %td= sales_payment.status
          %td= sales_payment.due_date
          %td= sales_payment.payment_date
          %td= sales_payment.amount
          %td= link_to 'Edit', edit_sales_payment_path(sales_payment)
          %td= link_to 'Destroy', sales_payment, method: :delete, data: { confirm: 'Are you sure?' }

%br
