= form_for @sales_payment do |f|
  - if @sales_payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sales_payment.errors.count, "error")} prohibited this sales_payment from being saved:"
      %ul
        - @sales_payment.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :client_name
    = f.text_field :client_name
  .field
    = f.label :deal_number
    = f.text_field :deal_number
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :due_date
    = f.text_field :due_date
  .field
    = f.label :payment_date
    = f.text_field :payment_date
  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
