= form_for @sales_address do |f|
  - if @sales_address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sales_address.errors.count, "error")} prohibited this sales_address from being saved:"
      %ul
        - @sales_address.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :client_name
    = f.text_field :client_name
  .field
    = f.label :address_line
    = f.text_field :address_line
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :zip_code
    = f.text_field :zip_code
  .actions
    = f.submit 'Save'
