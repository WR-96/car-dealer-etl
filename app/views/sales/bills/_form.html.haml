= form_for @sales_bill do |f|
  - if @sales_bill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sales_bill.errors.count, "error")} prohibited this sales_bill from being saved:"
      %ul
        - @sales_bill.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :client_name
    = f.text_field :client_name
  .field
    = f.label :rfc
    = f.text_field :rfc
  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :sub_total
    = f.text_field :sub_total
  .field
    = f.label :tax_percentage
    = f.text_field :tax_percentage
  .field
    = f.label :tax
    = f.text_field :tax
  .field
    = f.label :total
    = f.text_field :total
  .actions
    = f.submit 'Save'
